{	
	"n_workers": 4,
	"device_id": "cuda:0",
	
	"pose_loss":
	{
		"learnable": true,
		"s_x": -3.0,
		"s_q": -6.5,
		"norm": 2
	},
	"training":
	{
		"lr": 1e-3,
		"batch_size": 8,
		"n_freq_print": 5,
		"n_freq_checkpoint": 10,
		"weight_decay": 1e-5,
		"eps": 1e-10,
		"lr_scheduler_gamma": 0.1,
		"lr_scheduler_step_size": 10,
		"n_epochs": 30
	},
	"encoder":
	{
		"encoder_name":"eigenplaces",
		"eigenplaces":
		{
			"backbone": "ResNet50",
			"output_dim": 2048
		}
	},
	"mapper":
	{
		"mlp_dims":[1024, 20],
		"mlp_dropout": 0.1,
		"orientation_representation":"quat"
	}
}

